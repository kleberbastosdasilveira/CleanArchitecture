@model IEnumerable<CategoryDTO>

@{
    ViewData["Titulo"] = "Gerenciamento de Categorias";
}
<style>
    .modal-lg {
        max-width: 80%;
    }
</style>
<div>
    <h2>@ViewData["Titulo"]</h2>
</div>
<hr />

<vc:Summary></vc:Summary>

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary"><span title="Novo Registro" class="fas fa-plus">Novo Registro</span></a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-danger float-right m-1 "><span class="fas fa-trash-alt">Delete</span></a>
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning float-right m-1 "><span class="fas fa-edit">Editar</span></a>
                            <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-primary float-right m-1 "><span class="fas fa-search">Detalhes</span></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr> <td><span title="Não foi encontrado Registro" class="fas fa-plus">Não foi encontrado nenhum registro de Categoria.</span></td></tr>

            }

        </tbody>
    </table>

</div>